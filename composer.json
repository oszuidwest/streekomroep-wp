{
  "name": "oszuidwest/streekomroep",
  "description": "Streekomroep theme to use with Timber",
  "type": "wordpress-theme",
  "minimum-stability": "stable",
  "authors": [
    {
      "email": "info@zuidwesttv.nl",
      "name": "Omroepstichting ZuidWest"
    }
  ],
  "scripts": {
    "lint:twig": "twig-cs-fixer lint",
    "fix:twig": "twig-cs-fixer lint --fix"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "Streekomroep\\": "src/"
    }
  },
  "require": {
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "league/commonmark": "^2.4",
    "nesbot/carbon": "^3.11",
    "symfony/yaml": "^5.4",
    "timber/timber": "~2.3.0",
    "twig/markdown-extra": "^3.7"
  },
  "require-dev": {
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "vincentlanglet/twig-cs-fixer": "^3.13",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.2"
    }
  }
}
