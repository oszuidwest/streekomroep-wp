{% extends "base.twig" %}

{% block content %}
    <article>
        <div class="px-6 md:px-12 max-w-3xl mx-auto">
            <h1 class='text-black dark:text-white'>{{ post.title }}</h1>
            <img src="{{ post.thumbnail.src }}"/>
            <table class='text-black dark:text-white'>
                <tr>
                    <th>Van</th>
                    <td>{{ post.agenda_item_startdatum }}</td>
                </tr>
                <tr>
                    <th>Tot</th>
                    <td>{{ post.agenda_item_einddatum }}</td>
                </tr>
                <tr>
                    <th>Regio</th>
                    <td>{{ post.region.title }}</td>
                </tr>
            </table>
            <div class="prose dark:prose-invert">
                {{ post.content }}
            </div>
            <table class='text-black dark:text-white'>
                <tr>
                    <th>Locatie</th>
                    <td>{{ post.agenda_item_locatie }}</td>
                </tr>
                <tr>
                    <th>Kosten</th>
                    <td>{{ post.agenda_item_kosten }}</td>
                </tr>
                <tr>
                    <th>Organisator</th>
                    <td>{{ post.agenda_item_organisator }}</td>
                </tr>
                <tr>
                    <th>Performer</th>
                    <td>{{ post.agenda_item_performer }}</td>
                </tr>
            </table>

            <div class="py-10 bg-blauw text-white text-center">
                Google Maps
            </div>
        </div>
    </article>

    <div>
        <div class="px-6 md:px-12 max-w-3xl mx-auto">
            <h1 class='text-black dark:text-white'>Meer om te doen in {{ post.region }}</h1>
            <ul class='text-black dark:text-white'>
                {% for post in local.posts %}
                    <li><a href="{{ post.link }}">{{ post.title }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="text-black dark:text-white border-t border-gray-300/50 dark:border-gray-700/50">
        <div class="px-6 md:px-12 max-w-3xl mx-auto">
            <h1>Meer {{ post.agenda_item_soort }}</h1>
            <ul>
                {% for post in topical.posts %}
                    <li><a href="{{ post.link }}">{{ post.title }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
