<div class="max-w-960 mx-auto my-4 mt-0 sm:mt-4 sm:px-4">
    <div class="grid grid-stories gap-0.5">
        {% for post in block.posts %}
            <article class="{{ loop.first? 'main' }} flex flex-col">
                <a class="block relative flex-grow bg-gray-200 dark:bg-gray-800 {{ loop.first? 'sm:stories-pad' }}" href="{{ post.link }}">
                    <img class="object-cover w-full h-full absolute inset-0" loading="lazy" alt="{{ post.thumbnail.alt }}"
                         src="{{ post.thumbnail.src|thumbor(455, 384) }}"
                         srcset="{{ post.thumbnail.src|thumbor(910, 768) }} 2x"/>
                    <div class="relative sm:absolute inset-0 flex flex-col justify-end zw-block-content">
                    <span class="block p-4 pt-14 bg-gradient-to-b from-transparent"
                          style="--tw-gradient-to: rgba(0,0,0,.60);">
                        {% include 'partial/tag-region.twig' with { region: post.region } %}
                        <h2 class="block font-black {% if loop.first %}text-xl{% else %}text-base{% endif %} text-white">{{ post.title }}</h2>
                    </span>
                    </div>
                </a>
            </article>
        {% endfor %}
    </div>
</div>
