<div class="bg-gray-800 text-white my-4">
    <div class="lg:hidden">
        <div class="aspect-w-21 aspect-h-9">
            <div>
                <img
                    class="object-cover absolute inset-0 w-full h-full"
                    src="{{ Image(block.term.dossier_afbeelding_breed).src|thumbor(1024, 439) }}"
                    srcset="{{ Image(block.term.dossier_afbeelding_breed).src|thumbor(1024*2, 439*2) }} 2x"
                />
                <div class="absolute inset-x-0 bottom-0 h-32 max-h-full bg-gradient-to-t from-gray-800"></div>
            </div>
        </div>
    </div>
    <div class="w-full mx-auto max-w-960">
        <div class="lg:grid grid-cols-3">
            <div class="lg:col-span-2 lg:col-start-2 relative z-20">
                <div class="px-4 pt-4">
                    <h1 class="font-bold">
                        <span class="block text-sm tracking-wide uppercase font-round">Dossier</span>
                        {% if block.tekst_boven_dossier %}
                            <span class="block text-3xl">{{ block.tekst_boven_dossier }}</span>
                        {% else %}
                            <span class="block text-3xl">{{ block.term.name }}</span>
                        {% endif %}
                    </h1>
                    <div class="hidden lg:block prose text-white font-round py-4">Alles over de gemeente&shy;raadse&shy;verkiezingen 2022 van Roosendaal, Bergen op Zoom en Woensdrecht in ZuidWest Kiest.</div>
                </div>
                <ul class="divide-y divide-gray-700 mb-4">
                    {% for post in block.posts %} {% include 'partial/dossier-post-tile.twig' with { post: post } %} {% endfor %}
                </ul>
                <div class="block px-2 pb-4">
                    <a href="{{ block.term.link }}" class="text-blauw hover:bg-gray-700 block px-2 mx-1 my-0.5 rounded">â†’ Alles over {{ block.term.name }}</a>
                </div>
            </div>
            <div class="col-start-1 row-start-1 relative z-10">
                <div class="absolute inset-y-0 -inset-x-8">
                    <img class="absolute inset-0 w-full h-full object-cover" loading="lazy" src="{{ Image(block.term.meta('dossier_afbeelding_hoog')) }}" />
                    <div class="absolute left-0 inset-y-0 w-16 bg-gradient-to-r from-gray-800"></div>
                    <div class="absolute right-0 inset-y-0 w-1/2 bg-gradient-to-l from-gray-800"></div>
                </div>
            </div>
        </div>
    </div>
</div>

