<a class="block aspect-w-16 aspect-h-9" href="{{ post.link }}">
    <div class="bg-gray-50 text-gray-800 rounded overflow-hidden">
        {% if post.thumbnail %}
            <img class="absolute inset-0 w-full h-full object-cover"
                 src="{{ post.thumbnail.src|thumbor(160, 90) }}"/>
        {% endif %}
        <div class="absolute flex flex-col inset-x-0 bottom-0 px-4 pb-3 pt-12 bg-gradient-to-b from-transparent to-gray-50">
            <h1 class="uppercase font-round font-black text-2xl">{{ post.title }}</h1>

            {% set hosts = [] %}
            {% for host in post.meta('fm_show_presentator') %}
                {% set hosts = hosts|merge([User(host)]) %}
            {% endfor %}
            <p class="text-sm">{{ hosts|join(', ', ' en ') }}</p>
        </div>
        <div class="absolute inset-0 border rounded border-gray-800/10 pointer-events-none"></div>
    </div>
</a>
