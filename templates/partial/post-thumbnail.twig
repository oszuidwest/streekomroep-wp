{% set showPlayButton = false %}
{% if post.type == 'fragment' %}
    {% set showPlayButton = true %}
{% elseif post.type == 'post' and post.meta('post_gekoppeld_fragment') and post.meta('post_fragment_is_featured') %}
    {% set showPlayButton = true %}
{% endif %}
{% set width = width|default(228) %}
<div class="aspect-video relative">
    <div class="{% if dark ?? false %}bg-gray-900{% else %}bg-gray-200{% endif %}">
        {% if post.thumbnail %}
            <img class="w-full h-full object-cover" loading="lazy" alt="{{ post.thumbnail.alt }}"
                 src="{{ post.thumbnail.src|thumbor(width, width / 16 * 9) }}"
                 srcset="{{ post.thumbnail.src|thumbor(width * 2, (width * 2) / 16 * 9) }} 2x"/>
        {% endif %}
        {% if showPlayButton %}
            <div class="absolute bottom-2 left-2">
                <div class="flex items-center gap-1 px-2 py-1 bg-groen rounded text-xs font-bold text-gray-900 shadow">
                    <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                    <span>VIDEO</span>
                </div>
            </div>
        {% endif %}
    </div>
</div>
