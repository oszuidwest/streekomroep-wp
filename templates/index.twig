{% extends 'base.twig' %}

{% block content %}
    <div class="w-full mx-auto max-w-960 py-4 px-4">
        <h1 class="font-bold text-3xl pb-4 text-gray-800 dark:text-white">{{ title }}</h1>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for post in posts %}
                {{ include('partial/tile-post.twig', {post: post}) }}
            {% endfor %}
        </div>

        {{ include('partial/pagination.twig', {pagination: posts.pagination({show_all: false, mid_size: 1, end_size: 1})}) }}
    </div>

{% endblock %}
