{% extends "base.twig" %}

{% block content %}
    <div class="bg-white dark:bg-gray-800 text-white">
        <div class="px-4 mx-auto max-w-xl">
            <h1 class="font-bold text-3xl text-center pt-8 text-black dark:text-white">Zoeken</h1>
            <form class=" py-4" role="search" method="get" id="searchform"
                  action="{{ function('home_url', '/') }}">
                <input class="appearance-none bg-transparent border border-gray-400 dark:border-gray-600 rounded-md focus:outline-0 focus:ring focus:ring-blauw focus:ring-opacity-20 focus:border-blauw block w-full text-lg p-4 text-black dark:text-white transition" placeholder='Zoeken naar...' type="search"
                       value="{{ function('get_search_query') }}" name="s" id="s"/>

                <input class="appearance-none block text-lg rounded py-2 px-8 mx-auto mt-4 uppercase bg-blauw hover:brightness-110 cursor-pointer"
                       type="submit" value="Zoeken">
            </form>
        </div>
    </div>
{% endblock %}
