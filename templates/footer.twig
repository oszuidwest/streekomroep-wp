<footer class="text-gray-700 dark:text-gray-300">

    <div class='w-full bg-gray-200 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700/50'>
        <div class="max-w-960 mx-auto divide-y divide-gray-300 dark:divide-gray-700 px-4">
            {# App download banner - embedded card style #}
            <div class="py-3 sm:py-4">
                <div class="bg-gray-100 dark:bg-gray-700/50 rounded-lg sm:rounded-xl p-3 sm:p-4 flex items-center justify-between gap-2 sm:gap-3">
                    <div class="flex items-center gap-2 sm:gap-3">
                        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg sm:rounded-xl bg-gradient-to-br from-groen/20 to-groen/5 border border-groen/20 flex items-center justify-center flex-shrink-0">
                            {% set site_icon = function('get_site_icon_url', 64) %}
                            {% if site_icon %}
                                <img src="{{ site_icon }}" alt="" class="w-8 h-8 sm:w-10 sm:h-10 rounded-md sm:rounded-lg">
                            {% else %}
                                <svg class="w-5 h-5 sm:w-7 sm:h-7 text-groen" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                </svg>
                            {% endif %}
                        </div>
                        <div>
                            <p class="text-xs sm:text-sm font-bold text-gray-800 dark:text-white whitespace-nowrap">Download de ZuidWest App</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Altijd het laatste nieuws bij de hand</p>
                        </div>
                    </div>
                    <a href="{{ site.url }}/?pswutlzoq=install" class="px-3 py-1.5 sm:px-4 sm:py-2 bg-groen text-gray-900 text-xs sm:text-sm font-bold rounded-md sm:rounded-lg hover:bg-groen/90 transition flex-shrink-0">
                        Installeren
                    </a>
                </div>
            </div>
            <ul class="text-sm pt-6 sm:grid sm:grid-cols-4">
                {% for item in footer.items %}
                    <li>
                        <p class="text-xs pt-2 mb-1 font-round font-bold text-gray-500 tracking-wider uppercase {{ item.classes|join(' ') }}">{{ item.title }}</p>
                        <ul class="mb-4">
                            {% for child in item.children %}
                                <li>
                                    <a class="hover:underline focus:underline block py-1 {{ child.classes|join(' ') }}" href="{{ child.link }}">{{ child.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
            <div class="py-4 pb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <p class="text-sm">
                    Copyright Â© {{ ''|date('Y') }} Streekomroep ZuidWest
                </p>

                <div class="flex items-center gap-4 self-end sm:self-auto">
                    {# Social icons #}
                    {% if socials %}
                    <div class="flex items-center gap-3">
                        {% for social in socials %}
                            {% set icon_class = 'w-5 h-5' %}
                            {% set hover_class = 'hover:text-gray-900 dark:hover:text-white' %}

                            {% if social.name == 'Facebook' %}
                                {% set hover_class = 'hover:text-facebook' %}
                            {% elseif social.name == 'Instagram' %}
                                {% set hover_class = 'hover:text-instagram' %}
                            {% elseif social.name == 'Bluesky' %}
                                {% set hover_class = 'hover:text-bluesky' %}
                            {% elseif social.name == 'YouTube' %}
                                {% set hover_class = 'hover:text-youtube' %}
                            {% elseif social.name == 'LinkedIn' %}
                                {% set hover_class = 'hover:text-linkedin' %}
                            {% elseif social.name == 'TikTok' %}
                                {% set hover_class = 'hover:text-tiktok' %}
                            {% endif %}

                            <a href="{{ social.link }}" target="_blank" rel="noopener" class="text-gray-500 {{ hover_class }} transition-colors" title="{{ social.name }}">
                                {% if social.name == 'Facebook' %}
                                    <svg class="{{ icon_class }}" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                                {% elseif social.name == 'X' %}
                                    <svg class="{{ icon_class }}" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                                {% elseif social.name == 'Instagram' %}
