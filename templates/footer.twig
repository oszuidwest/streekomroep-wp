<footer class="text-gray-700">
    <div class="max-w-960 mx-auto mx-auto divide-y divide-gray-200 px-4">
        <ul class="text-sm pt-6 sm:grid sm:grid-cols-4">
            {% for item in footer.items %}
                <li>
                    <p class="text-xs pt-2 mb-1 font-round font-bold text-gray-500 tracking-wider uppercase {{ item.classes|join(' ') }}">{{ item.title }}</p>
                    <ul class="mb-4">
                        {% for child in item.children %}
                            <li>
                                <a class="hover:underline focus:underline block py-1{{ child.classes|join(' ') }}" href="{{ child.link }}">{{ child.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
        <div>
            <p class="text-sm py-4 pb-6">
                {# Empty string evaluates to the current date #}
                Copyright Â© {{ ""|date('Y') }} Streekomroep ZuidWest |
                {% for social in socials %}
                    <a href="{{ social.link }}" target="_blank" class="hover:underline">{{ social.name }}</a>{% if not loop.last %}, {% endif %}
                {% endfor %}
            </p>
        </div>
    </div>
</footer>
