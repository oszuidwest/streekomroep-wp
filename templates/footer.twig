<footer class="text-gray-700 dark:text-gray-300">
    <div class="max-w-960 mx-auto divide-y divide-gray-200 dark:divide-gray-700 px-4">
        <div class='py-6 flex justify-start items-center'>
            <button class='text-gray-400' id='themeDarkBtn' style="display: none;">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
            </button>
            <button class='text-gray-700' id='themeLightBtn' style="display: none;">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </button>
        </div>
        <ul class="text-sm pt-6 sm:grid sm:grid-cols-4">
            {% for item in footer.items %}
                <li>
                    <p class="text-xs pt-2 mb-1 font-round font-bold text-gray-500 tracking-wider uppercase {{ item.classes|join(' ') }}">{{ item.title }}</p>
                    <ul class="mb-4">
                        {% for child in item.children %}
                            <li>
                                <a class="hover:underline focus:underline block py-1{{ child.classes|join(' ') }}" href="{{ child.link }}">{{ child.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
        <div>
            <p class="text-sm py-4 pb-6">
                {# Empty string evaluates to the current date #}
                Copyright Â© {{ ""|date('Y') }} Streekomroep ZuidWest | <a class="bg-gradient-to-r from-roze to-blauw bg-clip-text font-bold text-transparent" target="_blank" href="https://www.nlpo.nl/streekomroep-ZuidWest-Omroep-van-het-Jaar-2022">Omroep van het jaar 2022</a> ðŸŽ‰ |
                {% for social in socials %}
                    <a href="{{ social.link }}" target="_blank" class="hover:underline">{{ social.name }}</a>{% if not loop.last %}, {% endif %}
                {% endfor %}
            </p>
        </div>
    </div>
</footer>